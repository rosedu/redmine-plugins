<%#= debug new_project_file_path %>
<%#= debug new_project_upload_path %>
<%#= debug @project%>

<div class="contextual">
  <%= link_to_if_authorized l(:label_upload_new),
                          {:action => 'new', :project_id => @project},
                           :class => 'icon icon-add',
                           :onclick => 'Element.show("add-upload"); Form.Element.focus("upload_title"); return false;' %>
</div>


<div id="add-upload" style="display:none;">
  <h2><%= l(:label_upload_new) %></h2>
  <% form_tag({:action => 'create'}, :class => "tabular", :multipart => true) do %>
  <%= render :partial => 'form' %>
<div class="box">

</div>
  <%= submit_tag l(:button_create) %>
  <%= link_to l(:button_cancel), "#", :onclick => 'Element.hide("add-upload")' %>
  <% end %>
</div>

<h2><%= l(:label_upload_plural) %></h2>

<% if @up_forms.blank? %>
   <p class="nodata"><%= l(:label_no_forms) %></p> 
<% else %>
  <%= render :partial => 'upload_form', :collection => @up_forms%> 
<% end %>

