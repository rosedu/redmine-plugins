<div class="contextual">
<%= link_to l(:button_edit), {:controller => 'uploads', :action => 'edit', :id => @upload_form, :project_id => @project}, :class => 'icon icon-edit', :accesskey => accesskey(:edit) %>
<%= link_to l(:button_delete), {:controller => 'uploads', :action => 'destroy', :id => @upload_form, :project_id => @project}, :confirm => l(:text_are_you_sure), :method => :delete, :class => 'icon icon-del' %>
</div>


<h2><%=h @upload_form.title %></h2>

<p><em><%=textilizable @upload_form.description %><br/>
<%=h format_date @upload_form.created_on %> </em></p>

<%#= project_uploads_path(@project) %>

<%#= debug @files %>


<table class="list files">
  <thead><tr>
    <%= sort_header_tag('filename', :caption => l(:field_filename)) %>
    <%= sort_header_tag('created_on', :caption => l(:label_date), :default_order => 'desc') %>
    <%= sort_header_tag('size', :caption => l(:field_filesize), :default_order => 'desc') %>
    <%= sort_header_tag('downloads', :caption => l(:label_downloads_abbr), :default_order => 'desc') %>
    <th>MD5</th>
    <th></th>
  </tr></thead>
  <tbody>
  <tr>
        <th colspan="6" align="left">
                <%= link_to( "Download All", {:controller => 'uploads', :action => 'download', :id => 1}, :class => "icon icon-package") %>
                </th>
        </tr>
  <% @files.each do |file| %>
  <tr class="file <%= cycle("odd", "even") %>">
    <td class="filename"><%= link_to_attachment file, :download => true, :title => file.description %></td>
    <td class="created_on"><%= format_time(file.created_on) %></td>
    <td class="filesize"><%= number_to_human_size(file.filesize) %></td>
    <td class="downloads"><%= file.downloads %></td>
    <td class="digest"><%= file.digest %></td>
    <td align="center">
    <%= link_to(image_tag('delete.png'), {:controller => 'attachments', :action => 'destroy', :id => file, :project_id => @project},
                                                                                                                                                                 :confirm => l(:text_are_you_sure), :method => :post) %>
    </td>
  </tr>
  <% end
 reset_cycle %>
  </tbody>
</table>

<% html_title(l(:label_attachment_plural)) -%>



<div class="box">
<% form_tag( {:controller => 'uploads', :action => 'addFiles', :project_id => @project} , :multipart => true, :class => "tabular") do %>

<p><label><%=l(:label_attachment_plural)%></label><%= render :partial => 'attachments/form' %></p>
</div>
<%= submit_tag l(:button_add) %>
<% end %>



